{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Development",
            "program": "${workspaceFolder}/dist/index.js",
            "preLaunchTask": "npm: build:dev",
            "cwd": "${workspaceFolder}",
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ],
            "skipFiles": [
                "<node_internals>/**"
            ],
            "sourceMaps": true
        }
    ]
}